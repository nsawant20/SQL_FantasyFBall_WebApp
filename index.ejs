         <h5>K: <%= locals.k_name || "No player added"%> </h5>
         <h5>D/ST: <%= locals.d_st_name || "No team added"%> </h5>
        </div>
        </form>
        </section>
</div></div></div>

<div class="container mt-4">
     <div class="card">
       <div class="card-body">
        <section>
        <form action="update_team" method="POST">
        <div class="form-group">
             <label for="team_update">Enter username of team to update:</label>
             <input type="text" class="form-control col-lg-9" id="team_update" aria-describedby="emailHelp" placeholder="Enter username" name="team_update">
             <label for="QB_update">Enter name of updated QB:</label>
             <input type="text" class="form-control col-lg-9" id="QB_update" aria-describedby="emailHelp" placeholder="Enter QB" name="QB_update">
             <label for="RB1_update">Enter name of updated RB1:</label>
             <input type="text" class="form-control col-lg-9" id="RB1_update" aria-describedby="emailHelp" placeholder="Enter RB1" name="RB1_update">
             <label for="RB2_update">Enter name of updated RB2:</label>
             <input type="text" class="form-control col-lg-9" id="RB2_update" aria-describedby="emailHelp" placeholder="Enter RB2" name="RB2_update">
             <label for="WR1_update">Enter name of updated WR1:</label>
             <input type="text" class="form-control col-lg-9" id="WR1_update" aria-describedby="emailHelp" placeholder="Enter WR1" name="WR1_update">
             <label for="WR2_update">Enter name of updated WR2:</label>
             <input type="text" class="form-control col-lg-9" id="WR2_update" aria-describedby="emailHelp" placeholder="Enter WR2" name="WR2_update">
             <label for="TE_update">Enter name of updated TE:</label>
             <input type="text" class="form-control col-lg-9" id="TE_update" aria-describedby="emailHelp" placeholder="Enter TE" name="TE_update">
             <label for="DST_update">Enter name of updated D/ST:</label>
             <input type="text" class="form-control col-lg-9" id="DST_update" aria-describedby="emailHelp" placeholder="Enter D/ST" name="DST_update">
             <label for="K_update">Enter name of updated K:</label>
             <input type="text" class="form-control col-lg-9" id="K_update" aria-describedby="emailHelp" placeholder="Enter K" name="K_update">
             <label for="FLEX_update">Enter name of updated FLEX:</label>
             <input type="text" class="form-control col-lg-9" id="FLEX_update" aria-describedby="emailHelp" placeholder="Enter FLEX" name="FLEX_update">
         </div>
        <button type="update" class="btn btn-warning">Update Team</button>
        </form>
        <p2><%=locals.update_success %></p2>
</div></div></div>

